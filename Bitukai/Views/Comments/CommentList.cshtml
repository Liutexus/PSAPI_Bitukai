@model IEnumerable<Bitukai.Models.Comment>


@{
    if (ViewData["EmptyListError"] != null)
    {
        <h2>There are no comments for this component.</h2>
    }
    else
    {
        <div class="container">
            <div class="row">
                <h2>Comments <div class="pull-right"><a href="#" id="addacomment" class="btn btn-primary">Add a comment</a> </div></h2>
            </div>
            <hr>
            @foreach (var item in Model)
            {
                <div class="row comment">
                    <div class="head">
                        <small><strong class='user'>@item.User.UserName</strong> @item.CreatedAt</small>
                    </div>
                    <p> @item.Description </p>
                </div>
            }
            <hr />
        </div>
    }
}
